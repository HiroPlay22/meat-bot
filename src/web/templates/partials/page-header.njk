<header class="flex flex-col gap-4 rounded-3xl border border-slate-800/80 bg-slate-900/70 p-4 shadow-sm shadow-slate-950/60 sm:p-5 mb-6">
  <div class="flex flex-col gap-3 lg:flex-row lg:items-center lg:justify-between">
    <div class="space-y-1">
      <p class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500">{{ page_label or 'Dashboard' }}</p>
      <h1 class="text-xl font-bold text-slate-100" id="hero-guild-title">{{ page_title or 'Control Center' }}</h1>
    </div>
    <div class="flex flex-wrap items-center gap-3">
      <div class="relative inline-flex">
        <button
          id="guild-switch-button"
          type="button"
          class="relative z-30 flex items-center gap-3 rounded-2xl border border-slate-800 bg-slate-900/80 px-4 py-2 text-sm font-semibold text-slate-100 hover:border-rose-500 transition"
        >
          <span id="current-guild-avatar" class="flex h-9 w-9 items-center justify-center overflow-hidden rounded-xl bg-slate-900 border border-slate-800"></span>
          <span id="current-guild-name" class="text-base">Keine Guild gewaehlt</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
            <path d="m6 9 6 6 6-6" />
          </svg>
        </button>
        <div
          id="guild-switch-menu"
          class="hidden absolute left-0 top-full z-50 mt-2 w-72 rounded-2xl border border-slate-800 bg-slate-950/95 p-2 shadow-xl shadow-slate-900/60 backdrop-blur-xl"
        ></div>
      </div>

      <div class="relative">
        <button
          id="profile-button"
          type="button"
          class="relative z-30 flex items-center gap-2 rounded-2xl border border-slate-800 bg-slate-900/80 px-3 py-2 text-sm text-slate-100 hover:border-rose-500 transition"
        >
          <span id="profile-avatar" class="flex h-9 w-9 items-center justify-center rounded-full bg-slate-800 text-xs font-semibold text-slate-100">U</span>
          <img id="profile-avatar-img" class="hidden h-9 w-9 rounded-full object-cover" alt="Profil" />
          <span id="profile-name" class="text-sm font-semibold">User</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
            <path d="m6 9 6 6 6-6" />
          </svg>
        </button>
        <div
          id="profile-dropdown"
          class="hidden absolute right-0 z-50 mt-2 w-56 rounded-2xl border border-slate-800 bg-slate-950/95 p-2 text-sm text-slate-100 shadow-xl shadow-slate-900/60 backdrop-blur-xl"
        >
          <p class="px-3 py-2 text-[11px] text-slate-400">Sprache</p>
          <div class="flex flex-col gap-1 px-1">
            <button id="lang-de" type="button" class="flex items-center justify-between rounded-xl px-3 py-2 hover:bg-slate-900/70">
              <span>Deutsch</span>
              <span class="text-[10px] text-emerald-400">Aktiv</span>
            </button>
            <button id="lang-en" type="button" class="flex items-center justify-between rounded-xl px-3 py-2 hover:bg-slate-900/70">
              <span>English</span>
              <span class="text-[10px] text-slate-500">bald</span>
            </button>
          </div>
          <div class="my-2 h-px bg-slate-800/70"></div>
          <button
            id="profile-logout" data-logout
            type="button"
            class="flex w-full items-center gap-2 rounded-xl px-3 py-2 text-rose-200 hover:bg-rose-900/30 hover:text-rose-100"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6A2.25 2.25 0 0 0 5.25 5.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15" />
              <path d="M18 12H9" />
              <path d="m15 9 3 3-3 3" />
            </svg>
            Logout
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
