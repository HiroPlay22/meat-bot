{
  "name": "meat-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/bot/index.ts",
    "build": "tsc && node scripts/copy-texts.cjs",
    "start": "node dist/bot/index.js",
    "web:start": "serve src/web -l 8080",
    "register:dev": "tsx src/bot/registerCommands.ts",
    "clear:global": "tsx src/bot/clearGlobalCommands.ts",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:generate": "prisma generate",
    "postinstall": "prisma generate",
    "web:dev": "vite --config vite.web.config.js",
    "web:build": "vite build --config vite.web.config.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "discord.js": "^14.16.0",
    "dotenv": "^16.4.5",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "serve": "^14.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.6",
    "nunjucks": "^3.2.4",
    "prisma": "^7.0.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^7.2.6",
    "vite-plugin-nunjucks": "^0.2.0"
  }
}
