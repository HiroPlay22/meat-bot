{
    "ts-node": {
    "esm": true
  },

  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["bot/*"],
      "@database/*": ["database/*"],
      "@services/*": ["bot/services/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["bot/modules/*"],
      "@utils/*": ["bot/utils/*"],
      "@commands/*": ["bot/commands/*"],
      "@interactions/*": ["bot/interactions/*"]
    },
    "types": ["node", "discord.js"]
  },
  "include": ["bot", "web", "config", "database", "types"],
  "exclude": ["node_modules", "dist"]
}
